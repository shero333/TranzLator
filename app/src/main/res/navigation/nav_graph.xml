    <fragment
        android:id="@+id/bottom_nav_conversation"
        android:name="com.risibleapps.translator.conversation.ConversationFragment"
        android:label="ConversationFragment" />
    <fragment
        android:id="@+id/bottom_nav_dictionary"
        android:name="com.risibleapps.translator.fragment.DictionaryFragment"
        android:label="DictionaryFragment" />

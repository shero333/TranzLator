    android:id="@+id/nav_graph"
    app:startDestination="@id/bottom_nav_translation">

    <fragment
        android:id="@+id/bottom_nav_translation"
        android:name="com.risibleapps.translator.fragment.TranslateHomeFragment"
        android:label="TranslateHomeFragment">
        <action
            android:id="@+id/action_bottom_nav_translation_to_fragmentTranslation"
            app:destination="@id/fragmentTranslation" />
